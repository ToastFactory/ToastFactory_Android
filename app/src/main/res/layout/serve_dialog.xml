<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "몇 번 테이블로 서빙할까요"
        android:textSize="20dp"
        android:fontFamily="@font/toast"
        android:layout_marginBottom="10dp"
        ></TextView>

    <TextView
        android:id = "@+id/toast_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = ""
        android:textSize="20dp"
        android:fontFamily="@font/toast"
        android:layout_marginBottom="10dp"
        ></TextView>


    <TextView
        android:id = "@+id/toast_quality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = ""
        android:textSize="20dp"
        android:fontFamily="@font/toast"
        android:layout_marginBottom="10dp"
        ></TextView>

    <Button
        android:id = "@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text = "1번"
        android:textSize="20dp"
        android:fontFamily="@font/toast"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_bg"
        ></Button>

    <Button
        android:id = "@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text = "2번"
        android:textSize="20dp"
        android:fontFamily="@font/toast"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_bg"
        ></Button>

    <Button
        android:id = "@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text = "3번"
        android:textSize="20dp"
        android:fontFamily="@font/toast"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_bg"
        ></Button>

    <Button
        android:id = "@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text = "4번"
        android:textSize="20dp"
        android:fontFamily="@font/toast"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_bg"
        ></Button>

    <Button
        android:id = "@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text = "5번"
        android:textSize="20dp"
        android:fontFamily="@font/toast"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_bg"
        ></Button>

    <Button
        android:id = "@+id/btn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text = "6번"
        android:textSize="20dp"
        android:fontFamily="@font/toast"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_bg"
        ></Button>

    <Button
        android:id = "@+id/btn_trash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text = "버리기"
        android:textSize="20dp"
        android:fontFamily="@font/toast"
        android:background="@drawable/btn_bg"
        ></Button>

</LinearLayout>